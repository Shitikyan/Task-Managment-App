<Window x:Class="TaskTimeManager.Views.AddTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Task" Height="300" Width="400">
    <StackPanel Margin="10">
        <Label Content="Name"/>
        <TextBox x:Name="NameTextBox"/>

        <Label Content="Due Date"/>
        <DatePicker x:Name="DueDatePicker"/>

        <Label Content="Priority"/>
        <TextBox x:Name="PriorityTextBox"/>

        <Label Content="Status"/>
        <TextBox x:Name="StatusTextBox"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Add" Click="AddButton_Click" Margin="0,0,10,0"/>
            <Button Content="Cancel" Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
