<Window x:Class="TaskTimeManager.Views.DeleteTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Delete Task" Height="150" Width="300">
    <StackPanel Margin="10">
        <TextBlock Text="Are you sure you want to delete this task?" TextWrapping="Wrap"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Yes" Click="YesButton_Click" Margin="0,0,10,0"/>
            <Button Content="No" Click="NoButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
